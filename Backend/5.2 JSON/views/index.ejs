  </form>
  <div id="recipeContainer" class="hidden">

    <!-- Else, show the recipe name e.g. <h2>Recipe name</h2>-->
    <% if (locals.recipe) { %>
      <h2 id="recipeTitle">
        <%= recipe.name %>
      </h2>
      <h3>Ingredients: </h3>
      <ul id="ingredientsList">
        <li>
          <%= recipe.ingredient.protein.name %>
            <%= recipe.ingredient.protein.preparation %>
        </li>
        <li>
          <%= recipe.ingredient.salsa.name %>
        </li>
        <% recipe.ingredient.topping.forEach(topping=> { %>
          <li>
            <%= topping.quantity %>
              <%= topping.name %>
          </li>
          <% }) %>
      </ul>
      <% } else { %>
        <!-- If no recipe yet, show: -->
        <h2>Pick your favourite taco ingredient ğŸ‘†</h2>
        <% } %>

  </div>
